<div class="row">
  <div class="col-sm-4"></div>
  <div class="col-sm-4">
    <%= form_for(@order, url: order_create_path) do |f| %>
      <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </p>
 
	  <p>
	    <%= f.label :address %><br>
	    <%= f.text_area :address %>
	  </p>

  	  <p>
        <%= f.label :pin %><br>
        <%= f.number_field :pin %>
      </p>

      <p>
        <%= f.label :mobile_no %><br>
        <%= f.text_field :mobile_no %>
      </p>

  <p>
    <%= f.submit 'Place Order', data: {confirm: "Are you sure ?"} %>
  </p>
<% end %>
  </div>
  <div class="col-sm-4">
    
  </div>
</div>